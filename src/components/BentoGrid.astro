---
import BentoCard from './BentoCard.astro';

const projects = [
  {
    title: 'Talking Rock',
    description: 'A local-first AI assistant prioritizing privacy and offline functionality. Features CAIRN for life organization, ReOS for natural language system control, and runs on modest hardware.',
    tags: ['Python', 'AI', 'Local-First', 'Privacy'],
    span: 'wide' as const,
    href: 'https://github.com/sefton37/talking_rock',
  },
  {
    title: 'Great Minds Roundtable',
    description: 'AI-powered debate simulator where historical political thinkers like Locke, Hayek, and Foucault respond to questions in their characteristic voice with attributed quotes.',
    tags: ['Claude Artifact', 'AI', 'Education'],
    span: 'normal' as const,
    href: 'https://claude.ai/public/artifacts/acd7153c-f8d3-4932-991c-2dd08a131a6e',
  },
  {
    title: 'Total Cost of Inflation',
    description: 'Interactive dashboard visualizing 50+ years of economic data, comparing purchasing power across income brackets and tracking healthcare, housing, and education costs.',
    tags: ['Claude Artifact', 'Data Viz', 'Economics'],
    span: 'normal' as const,
    href: 'https://claude.ai/public/artifacts/820dd661-5aaf-4211-8cdc-f70857ce46e6',
  },
  {
    title: 'Prefect',
    description: 'Server-side AI steward for managing game servers. Provides process management, log monitoring, and command execution with safety guardrails through MCP and Qt interfaces.',
    tags: ['Python', 'MCP', 'Game Servers', 'AI'],
    span: 'normal' as const,
    href: 'https://github.com/sefton37/Prefect',
  },
  {
    title: 'Ukraine Conflict OSINT Reader',
    description: 'Intelligence dashboard aggregating open-source analysis from ISW, CSIS, and RUSI with AI-generated summaries, geospatial visualization, and priority filtering.',
    tags: ['Claude Artifact', 'OSINT', 'Geopolitics'],
    span: 'normal' as const,
    href: 'https://claude.ai/public/artifacts/a59d851d-06f1-4fcc-b755-324781c13713',
  },
  {
    title: 'Portfolio',
    description: 'This site. Built with Astro and Tailwind, self-hosted on DigitalOcean with hardened nginx. Features a self-hosted Mistral instance for the chat component.',
    tags: ['Astro', 'Tailwind', 'Self-Hosted'],
    span: 'normal' as const,
    href: 'https://github.com/sefton37/portfolio',
  },
  {
    title: 'Connect on LinkedIn',
    description: 'View my professional background, experience, and connect with me.',
    tags: ['LinkedIn'],
    span: 'normal' as const,
    href: 'https://www.linkedin.com/in/kelloggbrengel/',
  },
];
---

<section class="py-24 container-wide">
  <div class="mb-12 reveal">
    <h2 class="text-3xl font-semibold mb-4">Selected Work</h2>
    <p class="text-text-secondary max-w-2xl">
      A few things I've built, analyzed, or helped bring to life.
    </p>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {projects.map((project, index) => (
      <BentoCard
        title={project.title}
        description={project.description}
        tags={project.tags}
        span={project.span}
        href={project.href}
      />
    ))}
  </div>
</section>
